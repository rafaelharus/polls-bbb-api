{
	"extends": [
		"airbnb-base",
		"plugin:prettier/recommended",
		"plugin:jest-formatting/recommended"
	],
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"rules": {
		"require-jsdoc": "off",
		"no-console": "off",
		"no-underscore-dangle": ["error", { "allow": ["_id"] }],
		"max-len": ["error", { "code": 120 }],
		"class-methods-use-this": "off"
	},
	"globals": {
		"logger": false
	},
	"env": {
		"jest/globals": true
	},
	"plugins": ["jest-formatting", "jest"]
}
